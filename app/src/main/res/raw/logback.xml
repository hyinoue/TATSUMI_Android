<?xml version="1.0" encoding="UTF-8"?><!--============================================================
　処理概要　:　logback.xml（ログ出力設定）
　対　　象　:　Logbackによるファイルログ出力制御
　内　　容　:　・FILE Appender定義
　　　　　　:　・ログ出力フォーマット設定
　　　　　　:　・ルートロガー設定
============================================================-->
<configuration>

    <!--============================================================
　　　処理概要　:　ファイル出力Appender定義
　　　名　　称　:　FILE
　　　内　　容　:　ログをErrorLog.txtへ出力
    ============================================================-->
    <appender
        name="FILE"
        class="ch.qos.logback.core.FileAppender">

        <!--============================================================
　　　　　　出力ファイル設定
　　　　　　・LOG_DIR環境変数があれば使用
　　　　　　・未設定時はカレントディレクトリ（.）
        ============================================================-->
        <file>${LOG_DIR:-.}/ErrorLog.txt</file>

        <!--============================================================
　　　　　　追記モード設定
　　　　　　・true：既存ログへ追記
        ============================================================-->
        <append>true</append>

        <!--============================================================
　　　　　　エンコーダ設定（ログフォーマット）
　　　　　　出力形式：
　　　　　　yyyy-MM-dd HH:mm:ss.SSS [thread] LEVEL logger - message
        ============================================================-->
        <encoder>
            <pattern>
                %date{yyyy-MM-dd HH:mm:ss.SSS}
                [%thread]
                %-5level
                %logger
                - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--============================================================
　　　処理概要　:　ルートロガー設定
　　　ログレベル:　DEBUG
　　　出力先　　:　FILE Appender
    ============================================================-->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>

</configuration>