<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　FileProvider パス設定ファイル
　関　　連　:　ファイル共有（content:// URI 発行用）
　備　　考　:　アプリ内／外部ストレージの公開対象パスを定義
============================================================-->
<paths>

    <!--================================================================
    　機　能　:　内部ストレージ（filesディレクトリ）
    　備　考　:　Context.getFilesDir() 配下
    ==================================================================-->
    <files-path
        name="files"
        path="." />

    <!--================================================================
    　機　能　:　内部キャッシュディレクトリ
    　備　考　:　Context.getCacheDir() 配下
    ==================================================================-->
    <cache-path
        name="cache"
        path="." />

    <!--================================================================
    　機　能　:　外部ストレージ（アプリ専用files）
    　備　考　:　Context.getExternalFilesDir() 配下
    ==================================================================-->
    <external-files-path
        name="external_files"
        path="." />

    <!--================================================================
    　機　能　:　外部キャッシュディレクトリ
    　備　考　:　Context.getExternalCacheDir() 配下
    ==================================================================-->
    <external-cache-path
        name="external_cache"
        path="." />

</paths>