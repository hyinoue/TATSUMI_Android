<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　アプリテーマ定義
　関　　連　:　全画面共通テーマ／NoActionBarテーマ
============================================================-->
<resources>

    <!--================================================================
    　機　能　:　基本アプリケーションテーマ
    　内　容　:　MaterialComponentsベースの共通テーマ設定
    　備　考　:　DayNight対応／DarkActionBar使用
    ==================================================================-->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color（プライマリカラー） -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color（セカンダリカラー） -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- ステータスバー色 -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- 必要に応じて追加テーマ設定を記述 -->

    </style>

    <!--================================================================
    　機　能　:　NoActionBarテーマ
    　内　容　:　ActionBarを非表示にする画面用テーマ
    　備　考　:　独自タイトルバーを使用する画面で指定
    ==================================================================-->
    <style name="Theme.MyApplication.NoActionBar" parent="Theme.MyApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>