<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　共通定義
　定　　義　:　表のセル１つ分
============================================================-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--====================================
        機　能　:　塗りつぶし色設定
        内　容　:　背景を白色で塗りつぶす
    ====================================-->
    <solid android:color="#FFFFFF" />

    <!--====================================
        機　能　:　枠線設定
        内　容　:　1dpの青色枠線（#C5B8FF）
    ====================================-->
    <stroke
        android:width="1dp"
        android:color="#C5B8FF" />

    <!--====================================
        機　能　:　角丸設定
        内　容　:　角丸なし（直角）
    ====================================-->
    <corners android:radius="0dp" />

</shape>