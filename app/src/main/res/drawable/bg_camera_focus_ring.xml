<?xml version="1.0" encoding="utf-8"?>
<!--============================================================
　処理概要　:　共通定義
　定　　義　:　円形ボタン背景Shape（透明・白枠）
============================================================-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!--====================================
        機　能　:　サイズ設定
        内　容　:　直径72dpの円形
    ====================================-->
    <size
        android:width="72dp"
        android:height="72dp" />

    <!--====================================
        機　能　:　塗りつぶし色設定
        内　容　:　透明（背景を透過）
    ====================================-->
    <solid android:color="@android:color/transparent" />

    <!--====================================
        機　能　:　枠線設定
        内　容　:　2dpの白色枠線
    ====================================-->
    <stroke
        android:width="2dp"
        android:color="#FFFFFFFF" />

</shape>