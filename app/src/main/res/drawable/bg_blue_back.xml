<?xml version="1.0" encoding="utf-8"?>
<!--============================================================
　処理概要　:　共通定義
　定　　義　:　メニューボタン背景Shape（矩形・黒枠付き）
============================================================-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--====================================
        機　能　:　塗りつぶし色の設定
        内　容　:　ボタン内部の背景色
        備　考　:　@color/menu_button_bg を使用
    ====================================-->
    <solid android:color="@color/menu_button_bg" />

    <!--====================================
        機　能　:　枠線の設定
        内　容　:　1dpの黒色枠線
    ====================================-->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!--====================================
        機　能　:　角丸設定
        内　容　:　角丸なし（直角）
    ====================================-->
    <corners android:radius="0dp" />

</shape>