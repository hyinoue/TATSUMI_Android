<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景（白） -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- 上線（高さ1dp） -->
    <item
        android:height="1dp"
        android:gravity="top">
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- 下線（高さ1dp） -->
    <item
        android:height="1dp"
        android:gravity="bottom">
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>

</layer-list>
