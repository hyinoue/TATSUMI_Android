<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　メインメニュー画面レイアウト
　関　　連　:　各機能画面への遷移ボタン（データ送受信／積載束選定／コンテナ情報入力／重量計算／照合コンテナ選定）
　　　　　　:　コンテナサイズ選択（Spinner）
　　　　　　:　作業状況表示（予定／完了／残り：コンテナ／出荷束数／出荷重量）
　　　　　　:　下部ボタン群（共通部品）表示
============================================================-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--================================================================
    　機　能　:　タイトルバー表示（画面タイトル／バージョン表示）
    　備　考　:　最上段固定
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 画面タイトル -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="メインメニュー"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- バージョン表示 -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Ver X.X.X"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　メイン領域（スクロール無し）
    　内　容　:　メニュー各ボタン／コンテナサイズ選択／作業状況表示
    　備　考　:　タイトルバー直下～下部ボタン群直上までを占有
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons">

        <!--================================================================
        　機　能　:　１.データ送受信ボタン
        　内　容　:　データ送受信画面への遷移
        ==================================================================-->
        <Button
            android:id="@+id/btnDataReceive"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="１.データ送受信"
            android:textColor="#000000"
            style="@style/AppButton.BlackStroke"
            android:textSize="18sp"
            app:backgroundTint="@color/menu_button_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 最終受信日時表示（データ送受信ボタン直下） -->
        <TextView
            android:id="@+id/lblDataReceiveTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:text="最終受信  ----/--/-- --:--"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/btnDataReceive"
            app:layout_constraintStart_toStartOf="@id/btnDataReceive" />

        <!-- 未送有表示（最終受信の右下付近） -->
        <TextView
            android:id="@+id/lblDataReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="-22dp"
            android:text="未送有"
            android:textColor="#FFFF00"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/lblDataReceiveTime"
            app:layout_constraintEnd_toEndOf="@id/btnDataReceive" />

        <!--================================================================
        　機　能　:　２.積載束選定ボタン
        　内　容　:　積載束選定画面への遷移
        ==================================================================-->
        <Button
            android:id="@+id/btnBundleSelect"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="２.積載束選定"
            android:textColor="#000000"
            style="@style/AppButton.BlackStroke"
            android:textSize="18sp"
            app:backgroundTint="@color/menu_button_bg"
            app:layout_constraintTop_toBottomOf="@id/lblDataReceive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--================================================================
        　機　能　:　コンテナサイズ選択行
        　内　容　:　積載束選定に使用するコンテナサイズを選択
        　備　考　:　積載束選定ボタン直下の右寄せ位置に配置
        ==================================================================-->
        <LinearLayout
            android:id="@+id/rowContainerSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btnBundleSelect"
            app:layout_constraintEnd_toEndOf="@id/btnBundleSelect">

            <TextView
                android:id="@+id/lblContainerSizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="コンテナサイズ"
                android:textSize="15sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginEnd="6dp" />

            <!-- Spinner枠（黒枠） -->
            <FrameLayout
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner_black_border"
                android:padding="1dp">

                <!-- コンテナサイズ選択Spinner -->
                <Spinner
                    android:id="@+id/spContainerSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:spinnerMode="dropdown"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp" />
            </FrameLayout>

        </LinearLayout>

        <!--================================================================
        　機　能　:　３.コンテナ情報入力ボタン
        　内　容　:　コンテナ情報入力画面への遷移
        ==================================================================-->
        <Button
            android:id="@+id/btnContainerInput"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="３.コンテナ情報入力"
            android:textColor="#000000"
            style="@style/AppButton.BlackStroke"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            app:backgroundTint="@color/menu_button_bg"
            app:layout_constraintTop_toBottomOf="@id/rowContainerSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 選定済表示（コンテナ情報入力ボタン右下） -->
        <TextView
            android:id="@+id/lblContainerInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="選定済"
            android:layout_marginTop="-6dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/btnContainerInput"
            app:layout_constraintEnd_toEndOf="@id/btnContainerInput" />

        <!--================================================================
        　機　能　:　４.重量計算ボタン
        　内　容　:　重量計算画面への遷移
        ==================================================================-->
        <Button
            android:id="@+id/btnWeightCalc"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="４.重量計算"
            android:textColor="#000000"
            style="@style/AppButton.BlackStroke"
            android:textSize="18sp"
            android:layout_marginTop="-5dp"
            app:backgroundTint="@color/menu_button_bg"
            app:layout_constraintTop_toBottomOf="@id/lblContainerInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--================================================================
        　機　能　:　５.照合コンテナ選定ボタン
        　内　容　:　照合コンテナ選定画面への遷移
        ==================================================================-->
        <Button
            android:id="@+id/btnCollateContainerSelect"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="５.照合コンテナ選定"
            android:textColor="#000000"
            android:textSize="18sp"
            style="@style/AppButton.BlackStroke"
            app:backgroundTint="@color/menu_button_bg"
            app:layout_constraintTop_toBottomOf="@id/btnWeightCalc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--================================================================
        　機　能　:　作業状況タイトル行
        　内　容　:　作業状況エリアの見出し表示
        ==================================================================-->
        <LinearLayout
            android:id="@+id/workTitleRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btnCollateContainerSelect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="#FFA500"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="作業状況"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
        　機　能　:　作業状況グリッド表示
        　内　容　:　予定／完了／残り をコンテナ／出荷束数／出荷重量で表示
        　備　考　:　6列×4行（区切り用の空列を含む）
        ==================================================================-->
        <GridLayout
            android:id="@+id/gridWorkStatus"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:columnCount="6"
            android:rowCount="4"
            app:layout_constraintTop_toBottomOf="@id/workTitleRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ヘッダ（6列） -->
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="予定"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="完了"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="残り"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- コンテナ行 -->
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="コンテナ"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblContainerPlan"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="/" />

            <TextView
                android:id="@+id/lblContainerFin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/lblZanContainer"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <!-- 出荷束数行 -->
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="出荷束数"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblBundlePlan"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="/" />

            <TextView
                android:id="@+id/lblBundleFin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/lblZanBundle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <!-- 出荷重量行 -->
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="出荷重量(t)"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblWeightPlan"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="/" />

            <TextView
                android:id="@+id/lblWeightFin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/lblZanWeight"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/menu_button_bg"
                android:gravity="end|center_vertical"
                android:textColor="#000000"
                android:paddingRight="8dp" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　下部ボタン群の配置（共通部品）
    　参　照　:　@layout/view_buttons
    　備　考　:　画面最下部に固定表示
    ==================================================================-->
    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>