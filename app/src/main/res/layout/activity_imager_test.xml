<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　バーコードテスト画面レイアウト
　関　　連　:　バーコード入力（EditText）
　　　　　　:　種類表示（ラベル＋表示用EditText）
　　　　　　:　種類詳細表示（ScrollView内TextView）
　　　　　　:　下部ボタン群（共通部品）表示
============================================================-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F7FF">

    <!--================================================================
    　機　能　:　タイトルバー表示（画面タイトル／バージョン表示）
    　備　考　:　最上段固定
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 画面タイトル -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="バーコードテスト"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- バージョン表示 -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Ver X.X.X"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　バーコード入力欄
    　内　容　:　バーコード文字列を入力（最大18文字）
    　備　考　:　画面上側（中央より少し上）に配置
    ==================================================================-->
    <EditText
        android:id="@+id/etBarcode"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_text_input"
        android:singleLine="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/rowKind"
        android:maxLength="18"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--================================================================
    　機　能　:　種類表示行
    　内　容　:　「種類」ラベル＋表示用EditText（ユーザー入力不可）
    　備　考　:　バーコード入力欄の下に配置
    ==================================================================-->
    <LinearLayout
        android:id="@+id/rowKind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/etBarcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 「種類」ラベル -->
        <TextView
            android:id="@+id/tvKindLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="種類"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <!-- 種類（表示用）※フォーカス不可／クリック不可 -->
        <EditText
            android:id="@+id/etKind"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_marginStart="25dp"
            android:singleLine="true"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:background="@null"
            android:inputType="none"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!--================================================================
    　機　能　:　種類詳細表示エリア（スクロール）
    　内　容　:　種類の説明／解析結果などを表示
    　備　考　:　縦スクロール可能、背景は青（bg_blue_back）
    ==================================================================-->
    <ScrollView
        android:id="@+id/scrollKind"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxHeight="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="90dp"
        android:scrollbars="vertical"
        android:background="@drawable/bg_text_readonly"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/rowKind"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 種類詳細表示 -->
        <TextView
            android:id="@+id/tvKindContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />
    </ScrollView>

    <!--================================================================
    　機　能　:　下部ボタン群の配置（共通部品）
    　参　照　:　@layout/view_buttons
    　備　考　:　画面最下部に固定表示
    ==================================================================-->
    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>