<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　カメラ画面レイアウト（CameraX）
　関　　連　:　プレビュー表示（PreviewView）
　　　　　　:　撮影画像プレビュー表示（ImageView）
　　　　　　:　フォーカス表示（フォーカスリング）
　　　　　　:　設定ボタン／終了ボタン
　　　　　　:　シャッター／保存／破棄ボタン
　　　　　　:　ステータスバー表示
============================================================-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--================================================================
    　機　能　:　プレビュー表示領域（CameraX PreviewView）
    　内　容　:　カメラ映像を表示
    　備　考　:　画面上部～下部バーの直上までを占有
    ==================================================================-->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#808080"
        app:scaleType="fillCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--================================================================
    　機　能　:　撮影後プレビュー表示
    　内　容　:　撮影した画像を表示（プレビュー領域に重ねる）
    　備　考　:　通常は非表示（visibility=gone）
    ==================================================================-->
    <ImageView
        android:id="@+id/capturedPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/previewView"
        app:layout_constraintBottom_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView" />

    <!--================================================================
    　機　能　:　フォーカスインジケータ表示
    　内　容　:　タップフォーカス等の位置をリングで表示
    　備　考　:　通常は非表示（visibility=gone）
    ==================================================================-->
    <View
        android:id="@+id/focusIndicator"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_camera_focus_ring"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/previewView"
        app:layout_constraintBottom_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView" />

    <!--================================================================
    　機　能　:　設定ボタン（左上）
    　内　容　:　カメラ設定画面等への遷移
    　備　考　:　プレビュー上に重ねて表示
    ==================================================================-->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings"
        android:contentDescription="settings"
        android:scaleType="centerInside"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toTopOf="@id/previewView" />

    <!--================================================================
    　機　能　:　右上操作パネル（Exit）
    　内　容　:　終了ボタン配置
    　備　考　:　プレビュー上に重ねて右上に配置
    ==================================================================-->
    <LinearLayout
        android:id="@+id/panelTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView">

        <!-- 終了ボタン -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:text="Exit"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            style="@style/AppButton.BlackStroke"
            app:backgroundTint="@color/menu_button_bg" />
    </LinearLayout>

    <!--================================================================
    　機　能　:　下部バー（シャッター／保存／破棄）
    　内　容　:　通常時はシャッターボタンを表示、撮影後は保存／破棄を表示
    　備　考　:　ステータスバーの直上に固定
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/statusBar">

        <!-- シャッターボタン（通常時表示） -->
        <ImageButton
            android:id="@+id/btnShutter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_blue_back"
            android:contentDescription="shutter"
            android:scaleType="center"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 保存／破棄ボタン（撮影後表示：通常は非表示） -->
        <LinearLayout
            android:id="@+id/confirmButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 保存 -->
            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_blue_back"
                android:contentDescription="save"
                android:scaleType="center"
                android:src="@android:drawable/ic_menu_save" />

            <!-- 破棄 -->
            <ImageButton
                android:id="@+id/btnDiscard"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/bg_blue_back"
                android:contentDescription="discard"
                android:scaleType="center"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　ステータスバー（最下部）
    　内　容　:　カメラ状態／エラーメッセージ等を表示
    　備　考　:　画面最下部に固定
    ==================================================================-->
    <TextView
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#D8D8F0"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="CAM_OPENERROR"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>