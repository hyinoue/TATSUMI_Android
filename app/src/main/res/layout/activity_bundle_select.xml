<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- タイトル：上固定 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        android:gravity="left|center_vertical"
        android:text="積載束選択"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 上部：入力エリア -->
    <LinearLayout
        android:id="@+id/areaHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1行目：コンテナ重量 / ダンネージ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="コンテナ" />

            <EditText
                android:id="@+id/etContainerKg"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:background="@drawable/bg_edittext_black_border"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:maxLength="4"
                android:paddingEnd="8dp"
                android:text="2200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#000000"
                android:text="ダンネージ" />

            <EditText
                android:id="@+id/etDunnageKg"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:gravity="end|center_vertical"
                android:background="@drawable/bg_edittext_black_border"
                android:inputType="number"
                android:maxLength="3"
                android:paddingEnd="8dp"
                android:text="32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

        <!-- 2行目：現品番号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="現品番号" />

            <EditText
                android:id="@+id/etGenpinNo"
                android:layout_width="222.5dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:background="@drawable/bg_edittext_black_border"
                android:maxLength="18"
                android:inputType="text"
                android:paddingStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ✅ 一覧（TableView：ヘッダ＋ボディ一体） -->
    <com.evrencoskun.tableview.TableView
        android:id="@+id/tableViewBundles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#888888"
        app:layout_constraintTop_toBottomOf="@id/areaHeader"
        app:layout_constraintBottom_toTopOf="@id/areaFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 下部：集計エリア -->
    <LinearLayout
        android:id="@+id/areaFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="6dp"
                android:text="積載束数" />

            <TextView
                android:id="@+id/tvBundleCount"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/bg_menu_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:textColor="#000000"
                android:text="総重量" />

            <TextView
                android:id="@+id/tvTotalWeight"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_menu_count"
                android:textColor="#000000"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="81dp"
                android:text="積載可能残重量" />

            <TextView
                android:id="@+id/tvRemainWeight"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_menu_count"
                android:textColor="#000000"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
