<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　積載束選定画面レイアウト
　関　　連　:　上部入力（コンテナ重量／ダンネージ重量／現品番号）
　　　　　　:　一覧表示（RecyclerView）
　　　　　　:　下部集計（積載束数／総重量／積載可能残重量）
============================================================-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--================================================================
    　機　能　:　タイトルバー表示（画面タイトル／バージョン表示）
    　備　考　:　最上段固定
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 画面タイトル -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="積載束選定"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- バージョン表示 -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Ver X.X.X"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　上部入力エリア
    　内　容　:　コンテナ重量／ダンネージ重量／現品番号
    　備　考　:　タイトルバー直下に配置
    ==================================================================-->
    <LinearLayout
        android:id="@+id/areaHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1行目：コンテナ重量 / ダンネージ重量 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- コンテナ重量ラベル -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="コンテナ" />

            <!-- コンテナ重量入力 -->
            <EditText
                android:id="@+id/etContainerKg"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:background="@drawable/bg_text_input"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:maxLength="4"
                android:paddingEnd="8dp" />

            <!-- 単位（kg） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />

            <!-- ダンネージ重量ラベル -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#000000"
                android:text="ダンネージ" />

            <!-- ダンネージ重量入力 -->
            <EditText
                android:id="@+id/etDunnageKg"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:gravity="end|center_vertical"
                android:background="@drawable/bg_text_input"
                android:inputType="number"
                android:maxLength="3"
                android:paddingEnd="8dp" />

            <!-- 単位（kg） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

        <!-- 2行目：現品番号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 現品番号ラベル -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="現品番号" />

            <!-- 現品番号入力 -->
            <EditText
                android:id="@+id/etGenpinNo"
                android:layout_width="222.5dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:background="@drawable/bg_text_input"
                android:maxLength="18"
                android:inputType="text"
                android:paddingStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!--================================================================
    　機　能　:　一覧ヘッダ（表見出し）
    　内　容　:　P No／B No／Index／重量／空欄（削除ボタン列）
    　備　考　:　RecyclerViewの直上に固定表示
    ==================================================================-->
    <LinearLayout
        android:id="@+id/rowTableHeader"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="#D0D0D0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/areaHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- P No -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_text_readonly"
            android:textSize="15sp"
            android:text="P No"
            android:textStyle="bold" />

        <!-- B No（境界線表現のためマージンを調整） -->
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_text_readonly"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="B No"
            android:textStyle="bold" />

        <!-- Index -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_text_readonly"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="Index"
            android:textStyle="bold" />

        <!-- 重量 -->
        <TextView
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_text_readonly"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="重量"
            android:textStyle="bold" />

        <!-- 削除ボタン列 -->
        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_text_readonly"
            android:layout_marginStart="-2dp"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>

    <!--================================================================
    　機　能　:　束一覧表示（RecyclerView）
    　内　容　:　積載束の候補一覧を表示
    　備　考　:　ヘッダ直下～下部集計エリア直上までを占有
    ==================================================================-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBundles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#888888"
        app:layout_constraintTop_toBottomOf="@id/rowTableHeader"
        app:layout_constraintBottom_toTopOf="@id/areaFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--================================================================
    　機　能　:　下部集計エリア
    　内　容　:　積載束数／総重量／積載可能残重量
    　備　考　:　最下段ボタン群（include）直上に配置
    ==================================================================-->
    <LinearLayout
        android:id="@+id/areaFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons">

        <!-- 1行目：積載束数 / 総重量 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 積載束数ラベル -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="6dp"
                android:text="積載束数" />

            <!-- 積載束数表示 -->
            <TextView
                android:id="@+id/tvBundleCount"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_text_readonly" />

            <!-- 総重量ラベル -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:textColor="#000000"
                android:text="総重量" />

            <!-- 総重量表示 -->
            <TextView
                android:id="@+id/tvTotalWeight"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_text_readonly"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp" />

            <!-- 単位（kg） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

        <!-- 2行目：積載可能残重量 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 積載可能残重量ラベル（位置合わせのため左マージン大きめ） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="81dp"
                android:text="積載可能残重量" />

            <!-- 残重量表示 -->
            <TextView
                android:id="@+id/tvRemainWeight"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_text_readonly"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp" />

            <!-- 単位（kg） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#000000"
                android:text="kg" />
        </LinearLayout>

    </LinearLayout>

    <!--================================================================
    　機　能　:　下部ボタン群の配置
    　参　照　:　@layout/view_buttons
    　備　考　:　画面最下部に固定表示
    ==================================================================-->
    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>