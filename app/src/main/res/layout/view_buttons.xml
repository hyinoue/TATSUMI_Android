<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　共通下部ボタンレイアウト
　関　　連　:　青／赤／緑／黄 ボタン
　用　　途　:　各画面下部に共通表示（include用）
============================================================-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!--================================================================
    　機　能　:　青ボタン（左端）
    ==================================================================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomBlue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:text=""
        android:textColor="#FFFFFF"
        style="@style/AppButton.BlackStroke"
        android:textSize="16sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#0000FF"
        app:cornerRadius="0dp" />

    <!--================================================================
    　機　能　:　赤ボタン
    ==================================================================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomRed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:text=""
        android:textColor="#FFFFFF"
        style="@style/AppButton.BlackStroke"
        android:textSize="16sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FF0000"
        app:cornerRadius="0dp" />

    <!--================================================================
    　機　能　:　緑ボタン
    ==================================================================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomGreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:text=""
        android:textColor="#FFFFFF"
        style="@style/AppButton.BlackStroke"
        android:textSize="16sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#008000"
        app:cornerRadius="0dp" />

    <!--================================================================
    　機　能　:　黄ボタン
    ==================================================================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBottomYellow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:textColor="#FFFFFF"
        style="@style/AppButton.BlackStroke"
        android:textSize="16sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="0dp"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFA000"
        app:cornerRadius="0dp" />

</LinearLayout>