<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　コンテナ情報入力画面レイアウト
　関　　連　:　コンテナNo／重量／ダンネージ等の入力・表示
　　　　　　:　撮影（コンテナNo／シールNo）および撮影画像表示
　　　　　　:　積載可残重量表示
　　　　　　:　下部ボタン群（共通部品）表示
============================================================-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--================================================================
    　機　能　:　タイトルバー表示（画面タイトル／バージョン表示）
    　備　考　:　最上段固定
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 画面タイトル -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="コンテナ情報入力"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- バージョン表示 -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Ver X.X.X"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　メイン入力領域
    　内　容　:　入力・表示項目一式を格納
    　備　考　:　下部ボタン群の上までを表示領域とする
    ==================================================================-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--================================================================
            　機　能　:　コンテナNo入力＋撮影
            　内　容　:　英字部／数字部の入力、チェックデジット表示、撮影ボタン
            　備　考　:　左ラベル幅(90dp)で他行と揃える
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowContainerNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvLabelContainerNo"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="コンテナNo."
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- 英字部（例：TSTU）※先頭3文字入力 -->
            <EditText
                android:id="@+id/etContainerNo1"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_input"
                android:gravity="start|center_vertical"
                android:inputType="textCapCharacters"
                android:maxLength="3"
                android:textSize="14sp"
                android:padding="4dp"
                android:text="" />

            <!-- 固定文字（U） -->
            <TextView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="U"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />

            <!-- 数字部（例：0000020）※最大6桁入力 -->
            <EditText
                android:id="@+id/etContainerNo2"
                android:layout_width="62dp"
                android:layout_height="26dp"
                android:layout_weight="0"
                android:background="@drawable/bg_text_input"
                android:gravity="start|center_vertical"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="" />

            <!-- チェックデジット表示 -->
            <TextView
                android:id="@+id/tvCheckDigit"
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:background="#66AEEF"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- コンテナNo撮影ボタン -->
            <Button
                android:id="@+id/btnPhotoContainerNo"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="撮影"
                android:layout_marginStart="6dp"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="0dp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　コンテナ自重入力
            　内　容　:　コンテナ自重（kg）を数値入力
            　備　考　:　最大4桁
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowContainerWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowContainerNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="コンテナ自重"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etContainerKg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_input"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:maxLength="4"
                android:paddingEnd="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="kg"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　ダンネージ入力
            　内　容　:　ダンネージ重量（kg）を数値入力
            　備　考　:　最大3桁
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowDunnage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowContainerWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="ダンネージ"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDunnageKg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_input"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:maxLength="3"
                android:paddingEnd="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="kg"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　番線重量表示
            　内　容　:　番線重量（kg）を表示（入力不可）
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowBansen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowDunnage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="番線"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBansenKg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_readonly"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="kg"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　積載束数表示
            　内　容　:　積載束数（束）を表示（入力不可）
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowBundleCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowBansen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="積載束数"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSekisaiBundleCount"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_readonly"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="束"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　総重量表示
            　内　容　:　総重量（kg）を表示（入力不可）
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowTotalWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowBundleCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="総重量"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalKg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_readonly"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="kg"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　シールNo入力＋撮影
            　内　容　:　シールNo入力、撮影ボタン
            　備　考　:　最大12文字
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowSealNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowTotalWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="シールNo."
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etSealNo"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/bg_text_input"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLength="12"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textSize="14sp"
                android:text="" />

            <Button
                android:id="@+id/btnPhotoSealNo"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="撮影"
                android:layout_marginStart="6dp"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="0dp" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　予約No入力（表示用）
            　内　容　:　予約Noを表示（背景が青：入力不可/参照用想定）
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowYoyakuNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowSealNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="予約No."
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etYoyakuNo"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="@drawable/bg_text_readonly"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textSize="14sp"
                android:text="" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　撮影画像表示エリア
            　内　容　:　左：コンテナNo撮影画像／右：シールNo撮影画像
            　備　考　:　左側にラベル幅分の余白(View)を設けて位置合わせ
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowPhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowYoyakuNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ラベル幅分の空き -->
            <View
                android:layout_width="90dp"
                android:layout_height="1dp" />

            <!-- コンテナNo撮影画像 -->
            <ImageView
                android:id="@+id/ivPhotoContainer"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="container photo" />

            <!-- 画像間スペース -->
            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <!-- シールNo撮影画像 -->
            <ImageView
                android:id="@+id/ivPhotoSeal"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="seal photo" />
        </LinearLayout>

        <!--================================================================
            　機　能　:　積載可残重量表示（下寄せ）
            　内　容　:　積載可残重量（kg）を表示
            　備　考　:　親ConstraintLayoutのBottomに制約して下側に配置
            ==================================================================-->
        <LinearLayout
            android:id="@+id/rowRemain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="積載可残重量"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="end"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/tvRemainKg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_text_readonly"
                android:gravity="end|center_vertical"
                android:paddingEnd="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="kg"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--================================================================
    　機　能　:　画面下部ボタン群の配置（共通部品）
    　参　照　:　@layout/view_buttons
    　備　考　:　画面最下部に固定表示
    ==================================================================-->
    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>