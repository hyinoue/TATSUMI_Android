<?xml version="1.0" encoding="utf-8"?><!--============================================================
　処理概要　:　コンテナ一覧　1行レイアウト
　関　　連　:　Index／コンテナNo／束数／作業日表示
　用　　途　:　RecyclerView 等の行アイテム
============================================================-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFFFFF">

    <!--================================================================
    　機　能　:　Index 表示
    ==================================================================-->
    <TextView
        android:id="@+id/tvRowIndex"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_table_cell"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <!--================================================================
    　機　能　:　コンテナNo 表示
    ==================================================================-->
    <TextView
        android:id="@+id/tvRowContainerNo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bg_table_cell"
        android:layout_marginStart="-2dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <!--================================================================
    　機　能　:　束数 表示
    ==================================================================-->
    <TextView
        android:id="@+id/tvRowBundleCnt"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_table_cell"
        android:layout_marginStart="-2dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <!--================================================================
    　機　能　:　作業日 表示
    ==================================================================-->
    <TextView
        android:id="@+id/tvRowSagyouYmd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bg_table_cell"
        android:layout_marginStart="-2dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>