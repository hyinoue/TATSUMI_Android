<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- タイトル：上固定（これはそのまま） -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0000FF"
        android:gravity="left|center_vertical"
        android:text="積載束照合"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 上部：入力エリア（表以外：文字小さめ＆高さ低め） -->
    <LinearLayout
        android:id="@+id/areaHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1行目：コンテナNo / 積載束数 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="コンテナNo. " />

            <EditText
                android:id="@+id/etContainerNo"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_back"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="#000000"
                android:paddingStart="3dp"
                android:paddingEnd="0dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="積載束数" />

            <EditText
                android:id="@+id/etSekisaiBundleCount"
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_blue_back"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:textColor="#000000"
                android:paddingEnd="6dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="束" />
        </LinearLayout>

        <!-- 2行目：作業日時 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="19dp"
                android:text="作業日時" />

            <EditText
                android:id="@+id/etSagyouDateTime"
                android:layout_width="160dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:background="@drawable/bg_blue_back"
                android:inputType="text"
                android:textColor="#000000"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 3行目：現品番号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="19dp"
                android:text="現品番号" />

            <!-- ★同じIDが2回あったので修正（重要） -->
            <EditText
                android:id="@+id/etGenpinNo"
                android:layout_width="160dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:background="@drawable/bg_edittext_black_border"
                android:inputType="text"
                android:textColor="#000000"
                android:maxLength="18"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 表ヘッダ（ここは表なので変更なし） -->
    <LinearLayout
        android:id="@+id/rowTableHeader"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="#D0D0D0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/areaHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_blue_back"
            android:textSize="15sp"
            android:text="P No"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_blue_back"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="B No"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_blue_back"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="Index"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_blue_back"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="重量"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/bg_blue_back"
            android:textSize="15sp"
            android:layout_marginStart="-2dp"
            android:text="確"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 一覧（表の中身） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBundles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#888888"
        app:layout_constraintTop_toBottomOf="@id/rowTableHeader"
        app:layout_constraintBottom_toTopOf="@id/areaFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 下部：集計エリア（表以外：文字小さめ＆高さ低め） -->
    <LinearLayout
        android:id="@+id/areaFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/includeBottomButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="読込束数" />

            <TextView
                android:id="@+id/tvReadCount"
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_blue_back"
                android:textColor="#000000"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/includeBottomButtons"
        layout="@layout/view_buttons"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
